<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="overview.overviewActivity.OverviewInit">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGrey"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="0dp"
        android:id="@+id/id_overview_header_create_relativeLayout_header">


        <Button
            android:id="@+id/id_overview_header_delete_button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/container_rounded_edges_left"
            android:drawableTop="@drawable/ic_arrow_back_black_24dp"
            android:padding="5dp"
            android:text="Zurück"
            android:textSize="10dp" />

        <View
            android:id="@+id/id_overview_header_delete_view_spacer"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toStartOf="@id/id_overview_header_delete_button_delete"
            android:layout_toEndOf="@id/id_overview_header_delete_button_back"
            android:layout_alignBottom= "@id/id_overview_header_delete_button_back"
            android:background="@color/colorWhite"
            />

        <Button
            android:id="@+id/id_overview_header_delete_button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/container_rounded_edges_right"
            android:drawableTop="@drawable/ic_delete_forever_black_24dp"
            android:padding="5dp"
            android:text="Löschen"
            android:textSize="10dp" />


    </RelativeLayout>
</RelativeLayout>