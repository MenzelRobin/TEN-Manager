<?xml version="1.0" encoding="utf-8"?>
<!-- Authored by Joscha Nassenstein -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_note_tagOverview_rowLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/id_note_tagOverview_hashtag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_weight="0.1"
            android:background="@color/note_transparent"
            android:text="@string/sample_note_hashtag"
            android:textColor="@color/TextWhite" />

    </LinearLayout>

    <EditText
        android:id="@+id/id_note_tagOverview_listItemText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:theme="@style/editTextListViewStyle"
        android:hint="@string/sample_note_listtag"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/TextWhite"
        android:textColorHint="@color/note_hintWhite" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageButton
            android:id="@+id/id_note_tagOverview_deleteButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_weight="0.1"
            android:background="@color/note_transparent"
            android:src="@drawable/ic_clear_white_24dp" />

    </LinearLayout>
</LinearLayout>
