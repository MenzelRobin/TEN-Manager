<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_note_tagOverview_rowLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/id_note_tagOverview_listItemText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:hint="@string/sample_note_listtag"
        android:textColorHint="@color/note_hintWhite"
        android:textColor="@color/note_textWhite"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageButton
        android:id="@+id/id_note_tagOverview_deleteButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="0.1"
        android:src="@drawable/ic_delete_white_24dp"
        android:layout_marginStart="10dp"
        android:background="@color/note_transparent"/>

    </LinearLayout>
</LinearLayout>
